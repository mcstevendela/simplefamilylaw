{# Template for single WooCommerce product page with subscription support #}
{% extends "base.twig" %}

{% block content %}
	<div class="woocommerce-single-product">
		<div class="container">
			{% do action('woocommerce_before_single_product') %}

			<div class="product-content">
				<div class="product-gallery">
					{% do action('woocommerce_before_single_product_summary') %}
				</div>

				<div class="product-summary">
					{% do action('woocommerce_single_product_summary') %}
				</div>
			</div>

			{# Product tabs and related products #}
			{% do action('woocommerce_after_single_product_summary') %}

			{# Video learning content section #}
			{% set video_content = post.meta('_video_learning_content') %}
			{% if video_content %}
				<div class="video-learning-section">
					<h2>{{ 'Course Content' }}</h2>
					<div class="video-content">
						{{ video_content }}
					</div>
				</div>
			{% endif %}

			{# Subscription features #}
			{% if is_subscription %}
				<div class="subscription-details">
					<h2>{{ 'Subscription Details' }}</h2>
					<ul class="subscription-features">
						<li>{{ 'Access to all video lessons' }}</li>
						<li>{{ 'Unlimited streaming' }}</li>
						<li>{{ 'Download videos for offline viewing' }}</li>
						<li>{{ 'Lifetime access to content' }}</li>
						<li>{{ 'Cancel anytime' }}</li>
					</ul>
				</div>
			{% endif %}

			{% do action('woocommerce_after_single_product') %}
		</div>
	</div>
{% endblock %}
