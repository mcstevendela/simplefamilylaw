{#
  Title: Testimonials
  Description: Testimonials block
  Category: RD-blocks
  Icon: list-view
  Keywords: testimonials
  Mode: edit
  Align: left
  PostTypes: page post
  SupportsAlign: left right
  SupportsMode: true
  SupportsMultiple: true
#}

<section class="rd-block rd-spacing rd-testimonial relative">
  {% if fields.background_image %}
    <div class="w-full h-full absolute top-0 left-0" style="background-color: #1C1C1C; z-index: 2; opacity: .9"></div>
    <img src="{{ fields.background_image.url }}" alt="{{ fields.background_image.alt }}" class="w-full h-full absolute top-0 left-0 object-cover" style="z-index: 1; filter: grayscale(100%);">
  {% endif %}
	<div class="rd-container relative" style="z-index: 3;">
    <div class="rd-testimonial-heading">
      <div class="w-full flex justify-center lg:justify-between items-center text-center lg:text-left">
        {% if fields.title %}
          <h2 class="rd-testimonial-heading__title">{{ fields.title }}</h2>
        {% endif %}
        {% if fields.button %}
          <div class="rd-testimonial-btn hidden lg:block">
            <a href="{{ fields.button.url}}" class="btn btn-primary">{{fields.button.title}}</a>
          </div>
        {% endif %}
      </div>
      {% if fields.description %}
        <p class="rd-testimonial-heading__text">{{ fields.description }}</p>
      {% endif %}
    </div>
    {% if fields.shortcode %}
      <div class="rd-testimonial-content">
        {{fn('do_shortcode', fields.shortcode|striptags)}}
      </div>
    {% endif %}
      {% if fields.button %}
        <div class="rd-testimonial-btn block lg:hidden">
          <a href="{{ fields.button.url}}" class="btn btn-primary">{{fields.button.title}}</a>
        </div>
      {% endif %}
	</div>
</section>