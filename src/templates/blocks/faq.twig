{#
  Title: FAQs
  Description: FAQs Block
  Category: RD-blocks
  Icon: editor-help
  Keywords: cta
  Mode: edit
  Align: left
  PostTypes: page post
  SupportsAlign: left right
  SupportsMode: true
  SupportsMultiple: true
#}

<section class="rd-block rd-spacing rd-faq bg-white">
  <div class="rd-container rd-faq-wrapper">
    <!-- Heading -->
    <div class="rd-faq-heading">
      {% if fields.title %}
        <h2 class="rd-faq-heading__title">{{ fields.title }}</h2>
      {% endif %}
      {% if fields.description %}
        <span class="rd-faq-heading__text">{{ fields.description }}</span>
      {% endif %}
    </div>
    <!-- Heading End -->
    <!-- Content -->
    {% if fields.questions %}
      <div class="rd-faq-list">
        {% for item in fields.questions %}
          <div class="rd-faq-item">
            <div class="rd-faq-question">
              <div class="rd-faq__question">
                <span class="rd-faq__text">{{ item.question }}</span>
                <span class="rd-faq__icon"></span>
              </div>
            </div>
            <div class="rd-faq-answer">
              {{ item.answer }}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    <!-- Content End -->
    <!-- Button -->
    {% if fields.button %}
      <div class="rd-faq-btn">
        <a href="{{ fields.button.url }}" target="{{ fields.button.target }}" class="btn btn-primary">{{ fields.button.title }}</a>
      </div>
    {% endif %}
    <!-- Button End -->
  </div>
</section>