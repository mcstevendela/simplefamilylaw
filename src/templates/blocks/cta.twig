{#
  Title: Call To Action
  Description: Call To Action Block
  Category: RD-blocks
  Icon: money
  Keywords: cta
  Mode: edit
  Align: left
  PostTypes: page post
  SupportsAlign: left right
  SupportsMode: true
  SupportsMultiple: true
#}

<section class="rd-block rd-spacing rd-cta bg-white">
  <div class="rd-container">
    <div class="rd-cta-wrapper">
      <!-- Content -->
      <div class="rd-cta-content">
        {% if fields.title %}
          <h2 class="rd-cta__title">{{ fields.title }}</h2>
        {% endif %}
        {% if fields.description %}
          <span class="rd-cta__text">{{ fields.description }}</span>
        {% endif %}
        {% if fields.button %}
          <div class="rd-cta-btn">
            <a href="{{ fields.button.url }}" target="{{ fields.button.target }}" class="btn btn-tertiary">{{ fields.button.title }}</a>
          </div>
        {% endif %}
      </div>
      <!-- Content End -->
      <!-- Image -->
      <div class="rd-cta-image">
        {% if fields.image %}
          <img src="{{ fields.image.url }}" alt="{{ fields.image.alt }}" class="rd-cta__image rd-responsive rd-grayscale">
        {% endif %}
      </div>
      <!-- Image End -->
    </div>
  </div>
</section>