<section class="rd-block rd-form bg-grey relative">
    {% if fields.background_image %}
      <img src="{{ fields.background_image.url }}" alt="{{ fields.background_image.alt }}" class="w-full h-full absolute top-0 left-0 z-1" style="opacity:0.015">
    {% endif %}
  <div class="rd-container rd-form-content">
    {% if fields.title %}
      <h2 class="rd-form__title">{{ fields.title }}</h2>
    {% endif %}
    {% if fields.shortcode %}
    <div class="rd-form-main">{{fn('do_shortcode', fields.shortcode|striptags)}}</div>
    {% endif %}
  </div>
</section>